                  <TableColumn maxWidth="100.0" minWidth="50.0" prefWidth="75.0" style="-fx-background-color: #45c8dc;" text="Sa" />
                  <TableColumn maxWidth="100.0" minWidth="50.0" prefWidth="75.0" style="-fx-background-color: #45c8dc;" text="So" />
