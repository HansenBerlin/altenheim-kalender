      <HBox alignment="CENTER" spacing="20.0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="TOP">
         <children>
            <MFXTextField alignment="CENTER" prefWidth="250.0" promptText="Vor- &amp; Nachname oder Firmenname" />
